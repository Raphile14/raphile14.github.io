---
export interface Props {
  title: string;
  duration: string;
  body: string;
  href: string | null;
  img: string;
  role: string;
  awards: string | null;
}

const { title, duration, body, href, img, role, awards } = Astro.props;
---

<li class='border-spacing-2 bg-slate-100 rounded-3xl shadow-2xl'>
  <a href={href} target='_blank'>
    <div class='relative'>
      <div
        class='absolute bottom-0 h-16 w-full bg-gradient-to-b from-transparent to-slate-100'
      >
      </div>
      <img class='p-[1px] aspect-[16/9] rounded-t-3xl' src={img} alt={title} />
    </div>
    <div class='mx-4 py-8 px-8'>
      <h2 class='text-center font-bold text-xl'>
        {title}
      </h2>
      <p class='text-center text-sm text-gray-500'>
        {role} ({duration})
      </p>
      <p class='text-justify py-4'>
        {body}
      </p>
      {awards && <p class='text-justify text-sm text-gray-500'>{awards}</p>}
    </div>
  </a>
</li>
