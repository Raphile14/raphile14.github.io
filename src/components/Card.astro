---
export interface Props {
  title: string;
  duration: string;
  body: string;
  href: string;
  img: string;
  role: string;
}

const { title, duration, body, href, img, role } = Astro.props;
---

<li class='link-card border-spacing-2 border-black'>
  <a href={href}>
    <div class='py-4 px-8'>
      <img class='pt-4 pb-6 aspect-[15/9]' src={img} alt={title} />
      <h2 class='text-center font-bold text-xl'>
        {title}
      </h2>
      <p class='text-center text-sm text-gray-500'>
        {role} ({duration})
      </p>
      <p class='text-justify py-4'>
        {body}
      </p>
    </div>
  </a>
</li>
