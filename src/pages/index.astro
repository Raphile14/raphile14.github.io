---
import Layout from '../layouts/Layout.astro';
import Card from '../components/Card.astro';
import webProjects from '@data/web-projects.json';
import academicProjects from '@data/academic-projects.json';
import gameDevProjects from '@data/game-dev-projects.json';
---

<Layout title="Raphael Dalangin's Portfolio">
  <main class='py-8'>
    <!-- Web Projects -->
    <section class='pb-8'>
      <h2 class='text-center uppercase font-bold text-2xl pb-8'>
        {webProjects.title}
      </h2>
      <ul
        id='projects'
        role='list'
        class='grid grid-cols-1 md:grid-cols-2 grid-flow-row gap-16 w-full lg:px-24'
      >
        {
          webProjects.data.map((project) => (
            <Card
              title={project.title}
              duration={project.duration}
              body={project.body}
              href={project.href}
              img={project.img}
              role={project.role}
              awards={project.awards}
            />
          ))
        }
      </ul>
    </section>

    <!-- Academic Projects -->
    <section class='pb-8'>
      <h2 class='text-center uppercase font-bold text-2xl pb-8'>
        {academicProjects.title}
      </h2>
      <ul
        id='projects'
        role='list'
        class='grid grid-cols-1 md:grid-cols-2 grid-flow-row gap-16 w-full lg:px-24'
      >
        {
          academicProjects.data.map((project) => (
            <Card
              title={project.title}
              duration={project.duration}
              body={project.body}
              href={project.href}
              img={project.img}
              role={project.role}
              awards={project.awards}
            />
          ))
        }
      </ul>
    </section>

    <!-- Game Dev Projects -->
    <section class='pb-8'>
      <h2 class='text-center uppercase font-bold text-2xl pb-8'>
        {gameDevProjects.title}
      </h2>
      <ul
        id='projects'
        role='list'
        class='grid grid-cols-1 md:grid-cols-2 grid-flow-row gap-16 w-full lg:px-24'
      >
        {
          gameDevProjects.data.map((project) => (
            <Card
              title={project.title}
              duration={project.duration}
              body={project.body}
              href={project.href}
              img={project.img}
              role={project.role}
              awards={project.awards}
            />
          ))
        }
      </ul>
    </section>
  </main>
</Layout>
