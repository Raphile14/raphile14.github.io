---
import Layout from '../layouts/Layout.astro';
import Card from '../components/Card.astro';
---

<Layout title="Raphael Dalangin's Portfolio">
  <main class='py-8'>
    <h1 class='text-center uppercase font-bold text-2xl'>Web Projects</h1>
    <ul
      id='projects'
      role='list'
      class='grid grid-cols-1 md:grid-cols-2 grid-flow-row gap-4 w-full lg:px-24'
    >
      <Card
        title='MMCM OCP Internship Website'
        duration='Feb 2022 - Oct 2022'
        body='A website created for Mapúa Malayan Colleges Mindanao to handle the internship operations of the school. All partner companies are listed here, and students can apply for internships and submit requirements.'
        href='https://docs.astro.build/'
        img='/images/mmcm-ocp.png'
        role='Full Stack Developer'
      />
      <Card
        title='MMCM CCIS Website'
        duration='June 2021 - Aug 2021'
        body='A website created for the College of Computer and Information Science Department of Mapúa Malayan Colleges Mindanao.'
        href='https://docs.astro.build/'
        img='/images/mcm-ccis-website.png'
        role='Full Stack Developer'
      />
      <Card
        title='MCM Virtual Marketplace 2020'
        duration='December 2020'
        body="A website created for Mapúa Malayan Colleges Mindanao's Office for Student Services during the December Virtual Marketing event."
        href='https://docs.astro.build/'
        img='/images/mcm-virtual-marketplace.png'
        role='Full Stack Developer'
      />
      <Card
        title='MCM Fusion Technicity: Voting Website'
        duration='Sep 2020 - Oct 2020'
        body='This Webite is used to assist the MCM Fusion: Technicity event for the academic year 2020-2021 on October 2, 2020. The Website will handle the votation process for the Mr and Ms Staycation, Show Stopper, MCMFlicks and Chill, and Vattle of the Vands. The website also showcases a live display of current votes.'
        href='https://docs.astro.build/'
        img='/images/mcm-fusion.png'
        role='Full Stack Developer'
      />
      <Card
        title='MCM Virtual Club Fair'
        duration='Oct 2020'
        body="A frontend and backend project for the MCM Virtual Club Fair 2020. The website is used to showcase the institution's student clubs and organization."
        href='https://docs.astro.build/'
        img='/images/mcm-club-fair.png'
        role='Full Stack Developer'
      />
    </ul>
  </main>
</Layout>
